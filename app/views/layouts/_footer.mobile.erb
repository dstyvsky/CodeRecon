<div id="footer">
	<div class="footer_tab">
		<p class="footer_word"><%= link_to "HOME", root_path %></p>
	</div>

	<div class="footer_tab">
		<p class="footer_word"><%= link_to "Create Account", signup_path %></p>
	</div>
	<% if logged_in? %>
		<div class="footer_tab">
			<p class="footer_word"><%= link_to "Logout", logout_path, method: "delete" %>
		</div>
		<div class="footer_tab">
			<p class="footer_word"><%= link_to "Settings", edit_user_path(current_user) %><p>
		</div>
	<% else %>
		<div class="footer_tab">
			<p class="footer_word"><%= link_to "Login", login_path %><p>
		</div>
	<% end %>


</div>